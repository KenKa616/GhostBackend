{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "es6",
    "module": "commonjs"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
